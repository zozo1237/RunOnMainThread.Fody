<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunOnMainThreadSample.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="165" Width="249">
    <Grid>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="RunOnMainThread WPF Test Application"/>
            <Button DockPanel.Dock="Top" Click="OnShowDialog" Content="OnShowDialog" VerticalAlignment="Top" Height="25" Width="175"/>
            <Button DockPanel.Dock="Top" Click="OnShowDialogUsingDispatcher" Content="OnShowDialogUsingDispatcher" VerticalAlignment="Top" Height="25" Width="175"/>
            <Button DockPanel.Dock="Top" Click="OnShowDialogUsingWeaver" Content="ShowDialogUsingWeaver" VerticalAlignment="Top" Height="25" Width="175"/>
        </DockPanel>
    </Grid>
</Window>
